<div class='articles'>
  <% @articles.each do |article| %>
  <div class='title'>
    <%= link_to article_path(article) do %>
    <span class='ber-title'><%= article.title %></span>
    <% end %>
  </div>
  <div class="pic-home">
    <img class="main-pic"><%= cl_image_tag article.photo.key %></img>
  </div>
  <% end %>
</div>
