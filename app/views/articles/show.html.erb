<% content_for :meta_description, @article.title %>
<% content_for :meta_image, cl_image_path(@article.photo.key) %>

<div class="page-container">
  <div class="article-header">
    <div class="pic">
      <img class="main-pic"><%= cl_image_tag @article.photo.key %></img>
    </div>
    <div class='page-title'>
      <h1><%= @article.title %></h1>
    </div>
  </div>
  <div class='page-content'>
    <span>By <%= @article.author %> | <%= @article.date.strftime("%d %B %Y") %></span>
    <p><%= @article.text.html_safe %></p>
  </div>
  <% if user_signed_in? %>
  <p><%= link_to 'Destroy', @article,
  method: :delete,
  data: { confirm: 'Are you sure?' } %></p>
  <p><%= link_to 'Edit', edit_article_path(@article) %></p>
</div>
<% else %>
<% end %>

</div>
